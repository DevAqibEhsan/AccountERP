
@{
    ViewData["Title"] = "Manage Module";
}


<link href="~/css/CommonStyle.css" rel="stylesheet" />
<script src="~/js/Common.js"></script>
<script src="~/js/SiteConfiguration/ManageModule.js"></script>

<style>

    #form {
        display: none;
    }

    .card-header .btnsection {
        display: inline-block;
        float: right;
    }
</style>

<script type="text/javascript">

    $(document).ready(function () {

        $("#btnAddModule").click(function () { FormShow() });

        $("#btnCancel").click(function () { GridShow() });

        RemoveSortingClass('tblAction');

    });

</script>

<div class="maincontent">

    @*Grid / Data Table Start*@
    <div id="grid" class="card">
        <div class="card-header">
            @ViewData["Title"]
            <div class="btnsection">
                <button type="button" id="btnAddModule" class="btn btn-success1"><i class="fa fa-plus" style="margin-right: 10px;"></i> Add</button>
            </div>
        </div>
        <div class="card-body">
            <div id="dvDataTable">
                <table id="dataTableModule" class="display" style="width:100%">
                    <thead>
                        <tr>
                            <th class="text-center" style="width:50px;">S.No</th>
                            <th class="text-center" style="width:200px;">Module Name</th>
                            <th class="text-center" style="width:110px;">Module Icon</th>
                            <th class="text-center" style="width:200px;">Module Name As ID</th>
                            <th class="text-center" style="width:147px;">Module Order No.</th>
                            <th class="text-center" style="width:80px;">Is Active</th>
                            <th class="text-center" style="width:200px;">Created User</th>
                            <th class="text-center" style="width:175px;">Created On</th>
                            <th class="text-center" style="width:200px;">Created User IP</th>
                            <th class="text-center" style="width:200px;">Last User</th>
                            <th class="text-center" style="width:175px;">Last Modified</th>
                            <th class="text-center" style="width:200px;">Last User IP</th>
                            <th class="text-center" style="width:75px;" id="tblAction">Action</th>
                        </tr>
                    </thead>
                    <tbody id="dataRow">
                        @*<tr>
                    td>Tiger Nixon</td>
                    <td>Tiger Nixon</td>
                    <td><li class="fas fa-photo-video"></li></td>
                    <td>Edinburgh</td>
                    <td>61</td>
                    <td>2011-04-25</td>
                    <td>asdf</td>
                    <td>2011-04-25</td>
                    <td>192.168.1.1</td>
                    <td>fdasdfad</td>
                    <td>2011-04-25</td>
                    <td>192.168.1.1</td>
                    <td>Action</td>
                </tr>*@

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    @*Grid / Data Table End*@

    @*Add/Edit Form Section Start*@
    <div id="form" class="card">
        <div class="card-header">
            @ViewData["Title"]
        </div>
        <div class="card-body">
            <form id="ManageModuleForm">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="txtModuleName">Module Name</label>
                        <input type="text" class="form-control" id="txtModuleName" placeholder="Module Name">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="txtModuleIcon">Module Icon</label>
                        <input type="text" class="form-control" id="txtModuleIcon" placeholder="Module Icon">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="txtModuleNameasID">Module Name As ID</label>
                        <input type="text" class="form-control" id="txtModuleNameasID" placeholder="Module Name As ID">
                    </div>

                    <div class="form-group col-md-6">
                        <label for="txtModuleOrderNo">Module Order No.</label>
                        <input type="text" class="form-control" id="txtModuleOrderNo" placeholder="Module Order No.">
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="chkModuleIsActive">
                        <label class="form-check-label" for="chkModuleIsActive">Is Active Module</label>
                    </div>
                </div>
                <div class="btnsection">
                    <button type="submit" class="btn btn-primary1" id="btnSave">Save</button>
                    <button type="button" id="btnCancel" class="btn btn-secondary1"><i class="fa fa-close" style="margin-right: 10px;"></i>Cancel</button>
                </div>
            </form>
        </div>
    </div>
    @*Add/Edit Form Section End*@

</div>

