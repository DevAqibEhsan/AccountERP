
@{
    ViewData["Title"] = "Manage Assigned Permission";
}

<link href="~/css/CommonStyle.css" rel="stylesheet" />
<script src="~/js/Common.js"></script>
<script src="~/js/SystemManagement/ManageAssignedPermission.js"></script>

<style>

    #form {
        display: none;
    }

    .card-header .btnsection {
        display: inline-block;
        float: right;
    }
</style>

<script type="text/javascript">

    $(document).ready(function () {

        $("#btnAddAssignedPermission").click(function () { FormShow() });

        $("#btnCancel").click(function () { CancelButtonAction(); });

        RemoveSortingClass('tblAction');

    });

</script>

<div class="maincontent">

    @*Grid / Data Table Start*@
    <div id="grid" class="card">
        <div class="card-header">
            @ViewData["Title"]
            <div class="btnsection">
                <button type="button" id="btnAddAssignedPermission" class="btn btn-success1"><i class="fa fa-plus" style="margin-right: 10px;"></i> Add</button>
            </div>
        </div>
        <div class="card-body">
            <div id="dvDataTable">
                <table id="dataTableAssignedPermission" class="display" style="width:100%">
                    <thead>
                        <tr>
                            <th class="text-center">S.No</th>
                            <th class="text-center">Role Name</th>
                            <th class="text-center">Module Name</th>
                            <th class="text-center">Module Page Name</th>
                            <th class="text-center">Action Name</th>
                            <th class="text-center">Created User</th>
                            <th class="text-center">Created On</th>
                            <th class="text-center">Created User IP</th>
                            <th class="text-center">Last User</th>
                            <th class="text-center">Last Modified</th>
                            <th class="text-center">Last User IP</th>
                            <th class="text-center" id="tblAction">Action</th>
                        </tr>
                    </thead>
                    <tbody id="dataRow">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    @*Grid / Data Table End*@

    @*Add/Edit Form Section Start*@
    <div id="form" class="card">
        <div class="card-header">
            @ViewData["Title"]
        </div>
        <div class="card-body">
            <form id="ManageAssignedPermissionForm">
                <input type="hidden" name="hdnAssignedPermissionRoleID" id="hdnAssignedPermissionRoleID" value="0" />
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="ddlRoleID">Role Name</label>
                        <select id="ddlRoleID" class="form-control">
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="ddlModulePageID">Module Page Name</label>
                        <select id="ddlModulePageID" class="form-control">
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="ddlModulePageActionID">Action Name</label>
                        <select id="ddlModulePageActionID" class="form-control">
                        </select>
                    </div>
                </div>

                <div class="btnsection">
                    <button type="button" class="btn btn-primary1" id="btnSave">Save</button>
                    <button type="button" id="btnCancel" class="btn btn-secondary1"><i class="fa fa-close" style="margin-right: 10px;"></i>Cancel</button>
                </div>
            </form>
        </div>
    </div>
    @*Add/Edit Form Section End*@

</div>

<script type="text/x-handlebars" id="temp_ddlRoleID">

    {{#each this}}
    <option value="{{RoleID}}">{{RoleName}}</option>
    {{/each}}

</script>

<script type="text/x-handlebars" id="temp_ddlModulePageID">

    {{#each this}}
    <option value="{{ModulePageID}}">{{ModulePageName}}</option>
    {{/each}}

</script>

<script type="text/x-handlebars" id="temp_ddlModulePageActionID">

    {{#each this}}
    <option value="{{ModulePageActionID}}" data-id="{{ModulePageID}}">{{ModulePageActionName}}</option>
    {{/each}}

</script>

