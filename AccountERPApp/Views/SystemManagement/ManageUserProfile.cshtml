
@{
    ViewData["Title"] = "Manage User Profile";
}

<link href="~/css/CommonStyle.css" rel="stylesheet" />
<script src="~/js/Common.js"></script>
<script src="~/js/SystemManagement/ManageUserProfile.js"></script>

<style>

    #form {
        display: none;
    }

    .card-header .btnsection {
        display: inline-block;
        float: right;
    }
</style>

<div class="maincontent">

    @*Add/Edit Form Section Start*@
    <div id="form" class="card">
        <div class="card-header">
            <div class="dvPageHeading">@ViewData["Title"]</div>
        </div>
        <div class="card-body">
            <form id="ManageUserForm">
                <input type="hidden" name="hdnUserID" id="hdnUserID" value="0" />
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="txtFirstName">First Name</label>
                        <input type="text" class="form-control" id="txtFirstName" placeholder="First Name">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="txtLastName">Last Name</label>
                        <input type="text" class="form-control" id="txtLastName" placeholder="Last Name">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="txtEmail">Email</label>
                        <input type="text" class="form-control" id="txtEmail" placeholder="Email">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="txtAddress1">Address 1</label>
                        <input type="text" class="form-control" id="txtAddress1" placeholder="Address 1">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="txtAddress2">Address 2</label>
                        <input type="text" class="form-control" id="txtAddress2" placeholder="Address 2">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="txtPhone">Phone</label>
                        <input type="text" class="form-control" id="txtPhone" placeholder="Phone">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="ddlCountryID">Country</label>
                        <select id="ddlCountryID" class="form-control">
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="ddlStateID">State</label>
                        <select id="ddlStateID" class="form-control">
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="ddlCityID">City</label>
                        <select id="ddlCityID" class="form-control">
                           
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="txtZipCode">ZipCode</label>
                        <input type="text" class="form-control" id="txtZipCode" placeholder="ZipCode">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="ddlGender">Gender</label>
                        <select id="ddlGender" class="form-control">
                            <option value="">Please Select</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="txtDOB">Date of Birth</label>
                        <input type="text" class="form-control" id="txtDOB" placeholder="Date of Birth">
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="chkUserIsActive">
                        <label class="form-check-label" for="chkUserIsActive">Is Active User</label>
                    </div>
                </div>

                <div class="btnsection">
                    <button type="button" class="btn btn-primary1" id="btnSave">Save</button>
                </div>
            </form>
        </div>
    </div>
    @*Add/Edit Form Section End*@

</div>

<script type="text/x-handlebars" id="temp_ddlCountryID">

    <option value="">Please Select</option>
    {{#each this}}
    <option value="{{CountryID}}">{{CountryName}}</option>
    {{/each}}

</script>

<script type="text/x-handlebars" id="temp_ddlStateID">

    <option value="">Please Select</option>
    {{#each this}}
    <option value="{{StateID}}">{{StateName}}</option>
    {{/each}}

</script>

<script type="text/x-handlebars" id="temp_ddlCityID">

    <option value="">Please Select</option>
    {{#each this}}
    <option value="{{CityID}}">{{CityName}}</option>
    {{/each}}

</script>

